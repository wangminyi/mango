- @user = resource || User.new
= simple_form_for @user, url: user_session_path do |f|
  = f.input :nickname, label: "用户名："
  = f.input :password, label: "密码："
  = f.submit "登录", class: 'btn btn-primary'

scss:
  form {
    margin: auto;
    text-align: center;
    margin-top: 100px;
    & > div {
      label {
        text-align: right;
        width: 100px;
      }
      input {
        width: 200px;
      }
    }
  }